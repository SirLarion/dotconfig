{
  "name": "@hox/frontend-admin",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hox/frontend-utils": "*",
    "@hox/frontend-utils-e2e-testing": "*",
    "@hox/ui": "*"
  },
  "config": {
    "scripts": "../../../../scripts/",
    "gqlSchemasPath": "../../../../packages/schema/generated/graphql"
  },
  "scripts": {
    "vite:start": "vite",
    "vite:build": "tsc && vite build",
    "vite:preview": "vite preview",
    "postinstall": "node $npm_package_config_scripts/linkSharedCode.js --package $npm_package_name",
    "build": "rescripts build",
    "deploy": "./scripts/deploy.sh",
    "eject": "react-scripts eject",
    "i18n:extract": "$npm_package_config_scripts/extractReactI18nStrings.sh",
    "i18n:extract:package": "$npm_package_config_scripts/extractReactI18nStringsPackage.sh",
    "i18n:extract:merge": "node $npm_package_config_scripts/i18nMergeJson.js",
    "i18n:extract:combined": "yarn i18n:extract:package && yarn i18n:extract:merge",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "lint": "eslint \"./src/**/*.{ts,tsx,graphql}\"",
    "lint:staged": "lint-staged",
    "pre-commit": "yarn lint:staged",
    "start": "rescripts start",
    "test:ci": "rescripts test --watchAll=false",
    "test": "rescripts test",
    "test:e2e": "BROWSER=chrome yarn run-testcafe --live",
    "test:e2e:ci": "BROWSER=\"chrome:headless --no-sandbox\" yarn run-testcafe -q -e -u --sf --screenshots path=$HOX_BUILD_ARTIFACT_DIR/packages/client/admin/screenshots --video $HOX_BUILD_ARTIFACT_DIR/packages/client/admin/videos --video-options singleFile=true,failedOnly=true,pathPattern=\\${USERAGENT}/\\${FILE_INDEX}.mp4",
    "test:e2e:ci:browserstack": "BROWSER=\"browserstack:ie@11:Windows 7\" BROWSERSTACK_PROJECT_NAME=hoxapp BROWSERSTACK_DISPLAY_RESOLUTION=\"1920x1080\" BROWSERSTACK_USE_AUTOMATE=1 yarn run-testcafe -q -e -u --sf --screenshots path=$HOX_BUILD_ARTIFACT_DIR/packages/client/admin/screenshots --video $HOX_BUILD_ARTIFACT_DIR/packages/client/admin/videos --video-options singleFile=true,failedOnly=true,pathPattern=\\${USERAGENT}/\\${FILE_INDEX}.mp4",
    "run-testcafe": "yarn run testcafe --assertion-timeout 60000 --selector-timeout 60000 --hostname localhost \"$BROWSER\" tests/e2e/tests/",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "preschema:gen": "find . -name '__generated__' -print0 | xargs -0 rm -rf",
    "schema:gen": "yarn run graphql-codegen --config ./codegen.yml",
    "schema:gen:watch": "yarn run schema:gen --watch"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "ie >= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "ie >= 11"
    ]
  }
}

<?xml version="1.0" encoding="utf-8"?>
<layout onlaunch="launch_kiosk">
  <row weight="1">
    <button icon="home" ontap="launch_kiosk" />
    <button icon="left" onTap="previous_tab" />
    <button icon="right" onTap="next_tab" />
    <button icon="docclose" onTap="close_tab" />
  </row>
  <row weight="5">
    <touch
      id="custom_touch"
      ondown="down"
      onup="up"
      onhold="hold"
      ontap="tap" 
      ondoubletap="double" 
      ontouchdelta="delta"
      ontouchabs="abs" 
    />
  </row>
</layout>